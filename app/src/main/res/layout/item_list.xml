<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/news_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        tool:text="This is the news headline"
        android:layout_toEndOf="@id/news_image"
        android:layout_marginStart="6dp"
        />

    <RelativeLayout
        android:id="@+id/trends_follower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_headline"
        android:layout_marginTop="60dp"
        android:layout_alignBaseline="@id/news_image"
        android:layout_toEndOf="@id/news_image" >

        <TextView
            android:id="@+id/news_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@android:color/holo_red_dark"
            tool:text="Top"/>

        <TextView
            android:id="@+id/viewers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="28"
            android:layout_toStartOf="@id/comments"
            android:layout_marginEnd="6dp"
             />

        <ImageView
            android:id="@+id/comments"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>