<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_margin="10dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/news_image"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentStart="true"
        android:src="@drawable/section"/>

    <TextView
        android:id="@+id/news_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        tool:text="This is the news headline"
        android:layout_toEndOf="@id/news_image"
        android:layout_marginStart="6dp"
        />

    <RelativeLayout
        android:id="@+id/trends_follower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_headline"
        android:layout_marginTop="60dp"
        android:layout_alignBaseline="@id/news_image"
        android:layout_toEndOf="@id/news_image" >

        <TextView
            android:id="@+id/news_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@android:color/holo_red_dark"
            tool:text="Section"/>

        <TextView
            android:id="@+id/viewers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_date"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
             />

    </RelativeLayout>

</RelativeLayout>